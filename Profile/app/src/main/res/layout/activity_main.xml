<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/Theme.AppCompat"
            android:background="#ffffff"
            />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/relative"
        >
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dp"
            android:layout_marginTop="@dimen/padding_extra_large_20"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/image_chooser"
            android:layout_below="@id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium_10"
            android:hint="@string/image_chooser"
            android:layout_marginLeft="@dimen/padding_too_large_30"
            android:backgroundTint="#d2d2"
           />
        <Button
            android:id="@+id/upload"
            android:layout_below="@id/image_view"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium_10"
            android:layout_marginRight="@dimen/padding_too_large_30"
            android:hint="@string/upload"
            android:backgroundTint="#d2d2"
            android:layout_centerHorizontal="true"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/contact_card_view"
            android:layout_below="@id/image_chooser"
            android:layout_height="150dp"
            android:backgroundTint="#ABB2B9"
            app:cardCornerRadius="@dimen/padding_too_large_30">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_too_large_30"
                android:layout_marginLeft="@dimen/padding_extra_large_20">
                <ImageView
                    android:layout_width="@dimen/padding_too_large_30"
                    android:layout_height="@dimen/padding_too_large_30"
                    android:src="@drawable/call"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_medium_10"
                    android:id="@+id/mobile"
                    android:text="@string/mobile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_medium_10"
                    android:text="+91-XXXXXXXXX"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/contact_card_view"
            app:cardCornerRadius="@dimen/padding_too_large_30"
            android:layout_marginTop="@dimen/padding_medium_10"
            android:backgroundTint="#ABB2B9"
            ></android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
